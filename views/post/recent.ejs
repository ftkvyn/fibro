<div class='col-md-2'>
</div>
<div class='col-md-10'>
	<div class='posts'
		ng-controller='PostController'
		ng-init='loadOnMain()'>
		<h3>Recent projects news</h3>
		<span ng-show='isLoading'>Loading...</span>
		<div 
		ng-repeat='post in posts'
		class='post-tile'>
		  	<div class='info'>
			  	<div class='title'>
				  	<a href='/post/{{post.id}}'>
				  		{{post.title}} 
				  	</a>
				  	- 
				  	<strong>{{post.project.name}}</strong>
			  	</div>
			  	<div class='createdAt'>
				  	{{post.createdAt | date}}
			  	</div>
		  	</div>
		</div>
	</div>
</div>
<div class='col-md-2'>
</div>
